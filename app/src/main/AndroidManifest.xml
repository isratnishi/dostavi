<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.opus">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/updated_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Login Activity-->

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Home Activity-->

        <activity
            android:name=".HomeActivity"
            android:label="Home">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>

        <!-- Requisition Entry -->
        <activity
            android:name=".RequisitionEntry.RequisitionEntryActivity1"
            android:label="@string/requisition_entry_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".RequisitionEntry.RequisitionEntryActivity2"
            android:label="@string/requisition_entry_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RequisitionEntry.RequisitionEntryActivity1" />
        </activity>

        <!-- Requisition Approval -->

        <activity
            android:name=".RequisitionApproval.RequisitionApprovalActivity1"
            android:label="@string/requisition_approve_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RequisitionApproval.RequisitionApproveActivity5" />
        </activity>
        <activity
            android:name=".RequisitionApproval.RequisitionApproveActivity2"
            android:label="@string/requisition_approve_label"/>

        <activity
            android:name=".RequisitionApproval.RequistionApproveActivity3"
            android:label="@string/requisition_approve_label"/>

        <activity
            android:name=".RequisitionApproval.RequisitionApproveActivity4"
            android:label="@string/requisition_approve_label"/>

        <activity
            android:name=".RequisitionApproval.RequisitionApproveActivity5"
            android:label="@string/requisition_approve_label"/>

        <!-- Requisition Status -->

        <activity
            android:name=".RequisitionStatus.RequisitionStatusHome"
            android:label="@string/requisition_status_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <activity android:name=".PrDetailsActivity1">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:label="@string/requisition_status_label"
                android:value=".RequisitionStatus.RequisitionStatusHome" />
        </activity>

        <activity
            android:name=".RequisitionStatus.PrStatusActivity"
            android:label="@string/requisition_status_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RequisitionStatus.RequisitionStatusHome" />
        </activity>
    </application>

</manifest>